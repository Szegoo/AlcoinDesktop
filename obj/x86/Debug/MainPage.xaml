<Page x:ConnectionId='1'
    x:Class="ShopApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="90" 
                   Text="Alcoin Shop" TextWrapping="Wrap" 
                   FontSize="50" VerticalAlignment="Top"
                   Width="295" Margin="0,27,0,0" />

        <ListView x:ConnectionId='2'                                
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate                           >
                    <StackPanel x:ConnectionId='4'>
                        <TextBlock x:ConnectionId='5' FontSize="30px"                     />
                        <Image x:ConnectionId='6' HorizontalAlignment="Center" 
                               Width="200"                        />
                        <TextBlock x:ConnectionId='7' FontSize="24px"                       FontWeight="Bold"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

